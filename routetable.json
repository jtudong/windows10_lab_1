{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "The region for the VNet"
            }
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "The name of the environment"
            },
            "allowedValues": [
                "prod",
                "dev",
                "sandbox"
            ]
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of the subnet"
            }
        }
    },
    "functions": [],
    "variables": {
        "tags": {
            "Department": "it",
            "Team": "networking",
            "Environment": "[parameters('environment')]",
            "Application": "network"
        },
        "routeTableName": "[concat(parameters('subnetName'),'-rt')]"
    },
    "resources": [
        {
            "name": "[variables('routeTableName')]",
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "tags": "[variables( 'tags')]",
            "properties": {
                "routes": [
                    {
                        "name": "internet-forced-firewall",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "10.116.3.4"
                        }
                    }
                ],
                "disableBgpRoutePropagation": false
            }
        }
    ],
    "outputs": {
        "routeTableID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/routeTables',variables('routeTableName'))]"
        }
    }
}